<div id="app">
  <h1>Add a person:</h1>
  <div>
    Name: <input v-model="newPersonName">
    Bio: <input v-model="newPersonBio">
    <button v-on:click="addPerson()">Add a person</button>
  </div>

  <div v-for="person in people">
    <h2 v-on:click="toggleBio">{{person.name}}</h2>
    <h2 v-if="person.bioVisible">{{person.bio}}</h2>
  </div>
</div>
